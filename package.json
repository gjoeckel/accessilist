{
  "name": "accessilist",
  "version": "1.0.0",
  "main": "js/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:all": "npm run test:accessibility && npm run test:performance && npm run test:mcp",
    "test:accessibility": "echo 'üß™ Running accessibility tests...' && node tests/puppeteer/accessibility_tests.js",
    "test:performance": "echo '‚ö° Running performance tests...' && node tests/puppeteer/performance_tests.js",
    "test:mcp": "echo 'üîß Running MCP validation...' && ./scripts/verify-mcp-autonomous.sh",
    "test:production-mirror": "./scripts/test-production-mirror.sh",
    "test:pre-commit": "docker compose up -d && sleep 3 && BASE_URL=http://127.0.0.1:8080 ./scripts/test-production-mirror.sh",
    "hooks:install": "./scripts/git-hooks/install-hooks.sh",
    "hooks:uninstall": "rm -f .git/hooks/pre-commit .git/hooks/pre-merge-commit && echo 'üóëÔ∏è  Git hooks removed'",
    "analyze:handlers": "./scripts/find-duplicate-handlers.sh",
    "analyze:handlers:full": "./scripts/analyze-event-handlers.sh",
    "validate": "npm run test:mcp && echo '‚úÖ Validation complete'",
    "validate:full": "npm run test:mcp && npm run analyze:handlers && echo '‚úÖ Full validation complete'",
    "local-start": "./scripts/local-start.sh",
    "local-start:bg": "./scripts/local-start.sh --background",
    "apache-start": "./scripts/apache-start.sh",
    "local-apache-start": "./scripts/local-apache-start.sh",
    "predeploy": "./scripts/deployment/pre-deploy-check.sh",
    "deploy": "./scripts/deployment/deploy-autonomous.sh",
    "deploy:migrate-sessions": "./scripts/deployment/migrate-sessions-directory.sh",
    "postdeploy": "./scripts/deployment/post-deploy-verify.sh",
    "deploy:full": "npm run predeploy && npm run deploy && npm run postdeploy",
    "deploy:check": "./scripts/deployment/pre-deploy-check.sh",
    "deploy:verify": "./scripts/deployment/post-deploy-verify.sh",
    "deploy:verify-env": "./scripts/deployment/verify-production-env.sh",
    "deploy:status": "./scripts/github-push-gate.sh status",
    "generate:user-stories": "node scripts/generate-user-stories.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f web",
    "docker:rebuild": "docker compose up -d --build",
    "docker:test": "docker compose up -d && sleep 3 && BASE_URL=http://localhost:8080 ./scripts/test-production-mirror.sh && docker compose down",
    "verify:routes": "bash scripts/verify-routes.sh all",
    "verify:routes:php": "bash scripts/verify-routes.sh php",
    "verify:routes:apache": "bash scripts/verify-routes.sh apache"
  },
